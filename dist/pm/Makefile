all: Statistics List Exporter

Statistics:
	mkdir -p src
	wget -P src http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Statistics-Descriptive-3.0612.tar.gz
	tar -zxvf src/Statistics-Descriptive-3.0612.tar.gz -C src
	ln -s src/Statistics-Descriptive-3.0612/lib/Statistics

List:
	mkdir -p src
	wget -P src https://cpan.metacpan.org/authors/id/R/RE/REHSACK/List-MoreUtils-0.416.tar.gz
	tar -zxvf src/List-MoreUtils-0.416.tar.gz -C src
	ln -s src/List-MoreUtils-0.416/lib/List

Exporter:
	mkdir -p src
	wget -P src https://cpan.metacpan.org/authors/id/T/TO/TOBYINK/Exporter-Tiny-0.042.tar.gz
	tar -zxvf src/Exporter-Tiny-0.042.tar.gz -C src
	ln -s src/Exporter-Tiny-0.042/lib/Exporter

